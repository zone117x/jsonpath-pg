{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "cmake -DCMAKE_BUILD_TYPE=Debug ../src/c && make clean && make",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "label": "build-wasm",
      "command": "BUILDKIT_PROGRESS=plain docker build -o build .",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}